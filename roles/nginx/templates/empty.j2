server {
    listen 80 default_server;
    server_name  _;

    add_header Content-Type text/html;
    return 200 "<H1>Vhost missing!</H1>";
}

server {
    listen 443 default_server ssl;
    ssl_certificate       /etc/ssl/certs/nginx.crt;
    ssl_certificate_key   /etc/ssl/certs/nginx.key;

    add_header Content-Type text/html;
    return 200 "<H1>Vhost missing!</H1>";
}
